#:kivy 1.9.1


<StandardButton@Button>:
    size_hint_x: None
    font_size: "18sp"
    width: "250dp"
    background_color: 1, 1, 1, 0.6
    border: 7, 0, 0, 0


<EvalSelectable@Button>:
    size_hint_y: None
    height: '60dp'
    bold: True
    background_color: 1, 1, 1, 0.2
    font_size: '25sp'
    border: 15, 0, 0, 0


<DropButton>:
    size_hint_y: None
    height: "64dp"


<ConfirmPopup>:
    cols:1
	Label:
		text: root.text
	GridLayout:
		cols: 2
		size_hint_y: None
		height: '44sp'
		Button:
			text: 'Oui'
			on_release: root.dispatch('on_answer','yes')
		Button:
			text: 'Non'
			on_release: root.dispatch('on_answer', 'no')


<Root>:
    menu: menu_button_id
    start_screen: start_screen_id
    skills_screen: skills_screen_id
    behaviour_screen: behaviour_screen_id
    screen_manager: screen_manager_id
    orientation: "vertical"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/projectz.jpg"
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "64dp"
        Button:
            size_hint_x: None
            width: "64dp"
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "images/ic_school_black_24dp.png"
            on_release: root.clear_display_label()
        MenuButton:
            id: menu_button_id
            text: "Accueil"
        Button:
            size_hint_x: None
            width: "64dp"
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "images/ic_menu_black_24dp.png"
            on_press: app.open_settings()
    ScreenManager:
        id: screen_manager_id
        StartScreen:
            id: start_screen_id
            name: "Accueil"

        SkillsScreen:
            id: skills_screen_id
            name: "Evaluation"

        BehaviourScreen:
            id: behaviour_screen_id
            name: "Comportement"


<StartScreen@Screen>:
    display_label: display_label_id
    display_header: display_header_id
    active_class_label: active_class_label_id
    active_skill_set_label: active_skill_set_label_id
    padding: "1dp", "1dp"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            pos_hint: {"center_x": .5, "top": 1}
            size_hint_y: 40
            size_hint_x: None
            orientation: "vertical"
            width: "250dp"
            Label:
                size_hint_y: None
                height: "10dp"
            StandardButton:
                id: active_class_label_id
                text: ""
                on_release: app.root.select_class()
            StandardButton:
                id: active_skill_set_label_id
                text: ""
                on_release: app.root.select_skill_set()
            StandardButton:
                text: "afficher evaluations"
                on_release: app.display_skills()
            StandardButton:
                text: "afficher comportements"
                on_release: app.display_behaviour()
            StandardButton:
                text: "exporter les donnees"
                on_release: app.export_data()
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 60
            BoxLayout:
                id: display_header_id
                size_hint_y: 10
            BoxLayout:
                size_hint_y: 90
                ScrollView:
                    id: display_label_id


<SkillsScreen@Screen>:
    student_name: student_name_id
    skill_name: skill_name_id
    skill_summary: skill_summary_id
    padding: "1dp", "1dp"
    BoxLayout:
        orientation: "vertical"

        EvalSelectable:
            id: student_name_id
            text: "Eleve"
            on_release: app.root.open_student_popup()
        EvalSelectable:
            id: skill_name_id
            text: "Competence"
            on_release: app.root.open_skills_popup()
        Label:
            id: skill_summary_id
            padding: "10dp", 0
            text: ""
            color: 1, 1, 1, 1
            font_size: '17sp'
            valign: 'top'
            text_size: self.size
        BoxLayout:
            size_hint_y: None
            height: (self.width - 5 * self.spacing) / 4
            orientation: 'horizontal'
            spacing: "10dp"
            padding: "10dp", "0dp"
            Button:
                canvas:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: "images/ic_sentiment_very_dissatisfied_black_24dp.png"
                background_color: 1, 1, 1, 0.6
                on_release: app.pre_set_student_skill(-2)
            Button:
                canvas:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: "images/ic_sentiment_dissatisfied_black_24dp.png"
                background_color: 1, 1, 1, 0.6
                on_release: app.pre_set_student_skill(-1)
            Button:
                canvas:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: "images/ic_sentiment_satisfied_black_24dp.png"
                background_color: 1, 1, 1, 0.6
                on_release: app.pre_set_student_skill(1)
            Button:
                canvas:
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: "images/ic_sentiment_very_satisfied_black_24dp.png"
                background_color: 1, 1, 1, 0.6
                on_release: app.pre_set_student_skill(2)


<BehaviourScreen@Screen>:
    student_name: student_name_id
    padding: '1dp', '1dp'
    EvalSelectable:
        pos_hint: {'center_x': .5, 'top': 1}
        id: student_name_id
        text: "Eleve"
        on_release: app.root.open_student_popup()

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, .6
        pos_hint: {'center_x': .5, 'center_y': .5}
        width: '250dp'
        spacing: "10dp"
        StandardButton:
            text: 'Bavardage'
            on_release: app.pre_set_student_disobedience(self.text)

        StandardButton:
            text: 'Insolence'
            on_release: app.pre_set_student_disobedience(self.text)

        StandardButton:
            text: 'Inactivite'
            on_release: app.pre_set_student_disobedience(self.text)

        StandardButton:
            text: 'Travail non fait'
            on_release: app.pre_set_student_disobedience(self.text)