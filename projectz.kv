#:kivy 1.9.1


<StandardButton@Button>:
    size_hint: None, None
    height: "40dp"
    font_size: "18sp"
    width: "250dp"
    background_color: 1, 1, 1, 0.7
    border: 7, 0, 0, 0

<DropDownMenu>:
    on_select: menu.text = "{}".format(args[1])
    Button:
        text: 'First'
        on_release: root.select('First')
    Button:
        text: 'Second'
        on_release: root.select('Second')



<Root>:
    orientation: "vertical"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/projectz.jpg"

    BoxLayout:
        background_image: "images/empty_b25.png"
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Label:
            size_hint_x: None
            width: "40dp"
        Button:
            id: menu
            text: "Accueil"
            on_release: root.dropdown.open(self)
        Button:
            size_hint_x: None
            width: "40dp"
            on_press: app.open_settings()

    ScreenManager:
        id: screen_manager

        StartScreen:
            name: "Accueil"

        SkillsScreen:
            name: "Évaluation"

        BehaviourScreen:
            name: "Comportement"

<StartScreen@Screen>:
    padding: "1dp", "1dp"
    BoxLayout:
        orientation: "vertical"
        size_hint: None, .8
        pos_hint: {"center_x": .5, "top": 1}
        width: "250dp"
        spacing: "10dp"

        Label:
            id: active_class
            text: ""
            size_hint_y: None
            height: "60dp"

        StandardButton:
            text: "charger des compétences"
            #on_release: root.random_pick_popup(display_label)

        StandardButton:
            text: "charger une classe"
            #on_release: root.open_class_popup(None)

        StandardButton:
            text: "afficher évaluations"
            #on_release: display_label.text=root.parent.format_students_skills()

        StandardButton:
            text: "afficher comportements"
            #on_release: display_label.text=root.parent.format_students_behaviour()

        Label:
            id: display_label
            background_color: 1, 1, 1, .3
            text: ""

<SkillsScreen@Screen>:
    padding: "1dp", "1dp"

    BoxLayout:
        orientation: "vertical"


<BehaviourScreen@Screen>:
    padding: "1dp", "1dp"

    BoxLayout:
        orientation: "vertical"